<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="@string/pref_sync"
        android:title="Synchronization"
        android:summaryOff="@string/sync_off"
        android:summaryOn="@string/sync_on"
        android:defaultValue="true" />

    <ListPreference
        android:key="pref_syncConnectionType"
        android:title="Sync Connection Type"
        android:summary="What type of connnection do you want?"
        android:dialogTitle="Sync Connection Type Dialog Title"
        android:entries="@array/pref_syncConnectionTypes_entries"
        android:entryValues="@array/pref_syncConnectionTypes_values"
        android:defaultValue="@string/pref_syncConnectionTypes_default" />

    <SwitchPreference
        android:id="@+id/comm"
        android:key="pref_enableComm"
        android:defaultValue="false"
        android:title="Enable Communication" />
</PreferenceScreen>